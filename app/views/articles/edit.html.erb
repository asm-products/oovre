<div class="row">
  <%= form_for @article do |f| %>

    <%= f.file_field :image %>
    <%=	f.text_field :title, placeholder: "Title" %>
    <%= f.text_field :subtitle, placeholder: "Subtitle" %>
    <%=	f.text_area :content, placeholder: "Write your story here..." %>

    <%=	f.submit "Save Changes", :class => 'button large' %>
    <%= link_to "Delete", article_destroy_path, method: :delete, class: 'button alert' %>

  <% end %>
</div>
